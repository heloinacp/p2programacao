<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<hr/>
  <%= render 'formbusca' %>
<hr/>

<table>
  <thead>
    <tr>
      <th>Código do Pedido</th>
      <th>Descrição do Pedido</th>
      <th>Data do Pedido</th>
      <th>Endereço</th>
      <th>Número</th>
      <th>Bairro</th>
      <th>Cep</th>
      <th>Valor Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.idPedido %></td>
        <td><%= pedido.descricao %></td>
        <td><%= pedido.dtPedido %></td>
        <td><%= pedido.endereco %></td>
        <td><%= pedido.numero %></td>
        <td><%= pedido.bairro %></td>
        <td><%= pedido.cep %></td>
        <td><%= pedido.valorTotal %></td>
        <td><%= link_to 'Mostrar', pedido %></td>
        <td><%= link_to 'Editar', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Deletar', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Pedido', new_pedido_path %>
